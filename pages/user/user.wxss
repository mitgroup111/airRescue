page{
  background: #f5f5f5;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #2e992d;
  width: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size:32rpx;
  padding-bottom:30rpx;
}
.userItem{
  background: url(http://www.hems999.com/mobile/images/myuser02.jpg) no-repeat right center #fff;
  height: 96rpx;
  line-height: 96rpx;
  margin-top: 30rpx;
  background-size: 56rpx 34rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
}
.iconImg{
  width:44rpx;
  height:44rpx;
  vertical-align: middle;
  margin: -6rpx 16rpx 0 0;
}
.user_login{
  background: #e9480c;
  border-radius: 6rpx;
  display:block;
  width:120rpx;
  height:50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
  color: #fff;
  letter-spacing: 2rpx;
}
.userItem image{
  width: 38rpx;
  height: 38rpx;
  display: inline-block;
  vertical-align: middle;
  margin-top:-6rpx;
  margin-right:10rpx;
}
.quit {
  width:100%;
  height:100rpx;
  line-height:100rpx;
  background:#fff;
  color:#2e992d;
  bottom:0px;
  left:0;
  text-align:center;
  border-top:2rpx solid #eee;
  border-bottom:2rpx solid #eee;
  letter-spacing:6rpx;
  position: fixed;

}
