page{
  background: #f5f5f5;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #2e992d;
  width: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size:32rpx;
  padding-bottom:30rpx;
}
.userItem{
  background: url(http://www.hems999.com/mobile/images/myuser02.jpg) no-repeat right center #fff;
  height: 48px;
  line-height: 48px;
  margin-top: 15px;
  background-size: 28px 17px;
  padding-left: 15px;
  font-size: 16px;
}
.iconImg{
  width:22px;
  height:22px;
  vertical-align: middle;
  margin: -3px 8px 0 0;
}
.user_login{
  background: #e9480c;
  border-radius: 3px;
  display:block;
  width:60px;
  height:25px;
  line-height: 25px;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 10px;
  color: #fff;
  letter-spacing: 1px;
}