/*优惠券*/
.stamp {
	width: 100%;
	height: 125px;
	position: relative;
	overflow: hidden;
	margin-bottom:10px;
}
.stamp:before {
	content: '';
	position: absolute;
	top:0;
	bottom:0;
	left:10px;
	right:0px;
	z-index: 0;
}
.stamp:after {
	content: '';
	position: absolute;
	left: 10px;
	top: 10px;
	right: 10px;
	bottom: 10px;
	box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.5);
	z-index: -2;
}
.stamp .parI{
	position: absolute;
	left: 20%;
	top: 45px;
	height: 125px;
	width:100%;
	background-color: rgba(255,255,255,.15);
	transform: rotate(-30deg);
}
.stamp .par{
	float: left;
	width: 60%;
	border-right:2px dashed rgba(255,255,255,.3);
	text-align: left;
	position: relative;
	height:125px;
}
.stamp .par .parName{
	color:#fff;
  margin: 20px 0 0 15px;
  display: block;
}
.stamp .par .parDay{
  margin-left: 26px;
  color: #fff;
}
.stamp .par .parDayText{
	font-size: 35px;
	margin-right: 5px;
}
.stamp .copy{
	display: inline-block;
	width:35%;
	color:rgb(255,255,255);
	position: relative;
	font-size: 40rpx;
}
.stamp .copy text{
  display: block;
  margin-left: 10px;
}
.copyName{
  margin-top: 15px;
}
.copyBtn{
  margin:10px 0;
  height: 30px;
}
.addOrderBtn{
  font-size: 36rpx;
  margin: 0px 0 0px 10px;
}
